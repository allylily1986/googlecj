{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "chrome": "readonly",
    "Image": "readonly"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/"
  ],
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "args": "none",
        "ignoreRestSiblings": true
      }
    ],
    "prefer-const": "warn"
  }
}
